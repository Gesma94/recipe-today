enum UserProvider {
  EMAIL
  GOOGLE
}

model User {
  id           Int      @id @default(autoincrement())
  firebase_uid String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  displayName  String   @unique
  password     String?  @unique
  email        String   @unique
  provider     UserProvider[]
  chat         Chat[]
}
